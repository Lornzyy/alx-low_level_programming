/**
 * is_prime_number - find if input is a prime number
 * @n: interger to look at
 * Return: 1 if integer is prime
 *         0 if integer is not prime
 */

int is_prime_number(int n)
{
if (n == 0)
{
return (0);
}
if (n < 0)
{
return (0);
}
if (n == 1)
{
return (0);
}
return (prime_no(n, 2));
}
